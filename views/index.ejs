
<% include partials/header %>

  <body>
      <div class="container-fluid">
       <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-4 "></div>
          <div class="col-lg-4 col-md-4 col-sm-4 d-flex">
            <form action="/users/login" method="POST" id="loginForm">
              <img class="img-rounded" src="img/username.jpg">
              <div class="form-group">
                <label for="Username">Email</label>
                <input type="username" class="form-control" id="name" placeholder="Enter Username">
              </div>
              <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter Password">
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="check">
                <label class="form-check-label" for="check">Remember me</label>
              </div>
              <button type="submit" id="submit" class="btn btn-success btn-block ">Login</button>
            </br>
              <a href="/users/register" >Sign Up</a>
            </form>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4"></div>
        </div>
      </div>
    <% include partials/footer %>
  </body>
  </html>